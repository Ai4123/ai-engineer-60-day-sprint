import pandas as pd

# Replace 'messy_data.csv' with the actual path to your file
try:
    df = pd.read_csv('CollegePlacement.csv')
    print("Dataset loaded successfully.")
except FileNotFoundError:
    print("Error: Make sure 'CollegePlacement.csv' is in the correct directory.")
    # Exit or handle the error appropriately
    # For a placeholder, you might create a small, messy sample DataFrame:
    data = {'A': [1, 2, 3, None, 5],
            'B': [5, None, 7, 8, 9],
            'C': [10, 11, 12, 13, 14]}
    df = pd.DataFrame(data)
    print("Using a placeholder DataFrame for demonstration.")


# Display the first few rows and the total number of entries
print("\nFirst 5 rows of the DataFrame:")
print(df.head())
print(f"\nTotal rows in the DataFrame: {len(df)}")

# 1. Find and count the missing values in each column
missing_counts = df.isnull().sum()

# 2. Get the total number of rows (observations)
total_rows = len(df)

# 3. Calculate the percentage
percentage_missing = (missing_counts / total_rows) * 100

# 4. Create a DataFrame for a clean output (optional, but recommended)
missing_data_summary = pd.DataFrame({
    'Missing Count': missing_counts,
    'Percentage Missing': percentage_missing.round(2) # Round to 2 decimal places
})

# Display the final results
print("\n--- Missing Value Analysis ---")
print(missing_data_summary)
